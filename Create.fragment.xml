<core:FragmentDefinition
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">
	<Dialog id="createDialog">
		<beginButton>
			<Button text="Сохранить" type="Emphasized" press="handleDialogSaveButton"/>
		</beginButton>
		<endButton>
			<Button text="Отменить" press="handleDialogCancelButton"/>
		</endButton>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
			<CheckBox id="isIntervalAppointment" text="Диапозон задач" select="handleAppointmentTypeChange"/>
			<Label text="Выберите сотрудника: " labelFor="selectPerson"/>
			<Select
					id="selectPerson"
					forceSelection="false"
					change="handleChangeSelect"
					width="100%"
					items="{
						path: '/people'
					}">
				<core:Item key="{name}" text="{name}"/>
			</Select>
			<Label text="Заголовок: " labelFor="inputTitle"/>
			<Input id="inputTitle"/>
			<Label text="Дата начала: " labelFor="startDate"/>
			<DateTimePicker
					id="startDate"
					displayFormat="short"
					required="true"
					change="handleCreateChange"/>
			<Label text="Дата окончания: " labelFor="endDate"/>
			<DateTimePicker
					id="endDate"
					displayFormat="short"
					required="true"
					change="handleCreateChange"/>
			<Label text="Подробная информация: " labelFor="inputInfo"/>
			<Input id="moreInfo"/>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>